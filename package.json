{
  "name": "toolkit",
  "version": "1.0.0",
  "description": "A monorepo toolkit for frontend solutions",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "clean": "rm -rf packages/*/node_modules"
  },
  "keywords": [
    "monorepo",
    "toolkit"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.15.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "webpack": "^5.105.2"
  }
}
